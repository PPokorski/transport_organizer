<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_volunteers_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headline_volunteers_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="@string/edit_activity_new"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/volunteer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text|textCapWords" />

        <EditText
            android:id="@+id/volunteer_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:inputType="text|textCapWords" />

        <EditText
            android:id="@+id/volunteer_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/volunteer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email addres"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Cars"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/list_cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </ListView>

        <Button
            android:id="@+id/car_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add car" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="confirmVolunteer"
            android:text="@string/volunteers_add_confirm" />

    </LinearLayout>

</RelativeLayout>