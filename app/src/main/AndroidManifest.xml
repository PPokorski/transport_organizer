            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityVolunteers" />
        <activity android:name=".ActivityDeliveries" />
        <activity android:name=".ActivityVolunteerEdit" />
        <activity android:name=".ActivityDeliveryEdit" />
