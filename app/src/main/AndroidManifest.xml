<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ppokorski.transport_organizer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityVolunteers" />
        <activity android:name=".ActivityDeliveries" />
        <activity android:name=".ActivityVolunteerEdit" />
        <activity android:name=".ActivityDeliveryEdit" />
        <activity android:name=".ActivityVolunteer" />
        <activity android:name=".ActivityDelivery" />
        <activity
            android:name=".ActivityCarsEdit"
            android:label="@string/title_activity_cars_edit"
            android:parentActivityName=".ActivityVolunteer"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.ppokorski.transport_organizer.ActivityVolunteer" />
        </activity>
        <activity
            android:name=".ActivityHoursEdit"
            android:label="@string/title_activity_hours_edit"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>